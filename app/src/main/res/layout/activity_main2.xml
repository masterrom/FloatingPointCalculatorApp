<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    tools:context="com.example.master.calculator.Main2Activity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Floating Point Converter"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#000000"
        android:paddingTop="50dp"
        android:paddingBottom="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IEEE-754 Single Precision 32 bit"
        android:textSize="14sp"
        android:paddingBottom="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Min Val: 2^(-126) | Max val: 2^127"
        android:paddingBottom="10"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:hint="Enter Number"
            android:inputType="numberDecimal"
            android:textSize="20sp"
            android:textAlignment="center"
            android:id="@+id/UserInput"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:id="@+id/convert"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_gravity="left"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign: "
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15sp"
            android:id="@+id/sign"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mantissa: "
            android:id="@+id/Mantissa"
            android:textSize="15sp"
            android:textColor="#000000"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="Exponent"
            android:id="@+id/Exponent"
            android:textColor="#000000"
            />

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Combined Result"
            android:textColor="#000000"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:textStyle="bold"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sign [ exponent ] mantissa"
        android:textSize="15sp"
        android:paddingBottom="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Bit [ 23 Bits ] 8 bits"
        android:textSize="15sp"
        android:paddingBottom="5dp"
        />



    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/allTogether"
            android:textColor="#000000"
            android:paddingTop="10dp"
            android:textSize="15sp"
            />


</LinearLayout>
